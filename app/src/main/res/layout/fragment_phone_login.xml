<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:scrollbarAlwaysDrawVerticalTrack="false">

            <ImageView
                android:id="@+id/bgImageView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@string/image_default__image"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <!--            <ImageView-->
<!--                android:id="@+id/imageView32"-->
<!--                android:layout_width="120dp"-->
<!--                android:layout_height="120dp"-->
<!--                android:layout_marginTop="60dp"-->
<!--                android:contentDescription="@string/image_default__image"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintTop_toTopOf="parent"-->
<!--                app:srcCompat="@drawable/img_code_verification" />-->

            <TextView
                android:id="@+id/aa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_8"
                android:padding="@dimen/space_16"
                android:paddingBottom="@dimen/space_4"
                android:text="Hi, Prodesian"
                android:layout_marginTop="@dimen/space_100"
                android:textColor="@color/grey_40"
                android:textSize="@dimen/font_h7_size"
                android:textStyle="bold"
                app:font='@{"bold"}'
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/bgImageView" />

            <LinearLayout
                android:id="@+id/ll_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/space_8"
                android:gravity="left"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/aa">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:isScrollContainer="true"
                    android:paddingStart="@dimen/space_16"
                    android:paddingEnd="@dimen/space_16"
                    android:singleLine="true"
                    android:text="Masuk dengan nomor HP mu"
                    android:textColor="@color/md_black_1000"
                    android:textSize="@dimen/font_h5_size"
                    android:textStyle="bold"
                    app:font='@{"normal"}'
                    app:textSize='@{"edit_text"}' />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:isScrollContainer="true"
                    android:paddingStart="@dimen/space_16"
                    android:paddingEnd="@dimen/space_16"
                    android:singleLine="true"
                    android:text="yang terdaftar"
                    android:textColor="@color/md_black_1000"
                    android:textSize="@dimen/font_h5_size"
                    android:textStyle="bold"
                    app:font='@{"normal"}'
                    app:textSize='@{"edit_text"}' />

                <TextView
                    android:paddingTop="@dimen/space_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:isScrollContainer="true"
                    android:paddingStart="@dimen/space_16"
                    android:paddingEnd="@dimen/space_16"
                    android:singleLine="true"
                    android:text="Kami akan mengirimkan One Time Password"
                    android:textColor="@color/grey_40"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_body_size"
                    app:font='@{"normal"}'
                    app:textSize='@{"edit_text"}' />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:isScrollContainer="true"
                    android:paddingStart="@dimen/space_16"
                    android:textStyle="bold"
                    android:paddingEnd="@dimen/space_16"
                    android:singleLine="true"
                    android:text="pada nomor Handphone-mu"
                    android:textColor="@color/grey_40"
                    android:textSize="@dimen/font_body_size"
                    app:font='@{"normal"}'
                    app:textSize='@{"edit_text"}' />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="@dimen/space_48"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_corner_shape_for_login"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_one">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="@dimen/space_4"
                        app:riv_border_color="@color/grey_10"
                        app:riv_border_width="1dip"
                        android:src="@drawable/indo"></com.makeramen.roundedimageview.RoundedImageView>

                    <TextView
                        android:id="@+id/phoneCodeEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+62"
                        android:textStyle="bold"></TextView>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="@dimen/space_12"
                        android:paddingRight="@dimen/space_16"
                        android:background="@color/md_grey_300"
                        android:textStyle="bold"></View>

                </LinearLayout>

                <com.mrii.prodes.utils.MyEditText
                    android:id="@+id/phoneEditText"
                    android:layout_width="230dp"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:drawablePadding="@dimen/space_16"
                    android:hint="@string/phone_login_phone_hint"
                    android:inputType="phone"
                    android:isScrollContainer="true"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingStart="@dimen/space_16"
                    android:paddingEnd="@dimen/space_16"
                    android:singleLine="true"
                    android:textColor="@color/text__primary"
                    app:font='@{"normal"}'
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:textSize='@{"edit_text"}' />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/addPhoneButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_shape_button_for_login"
                android:text="@string/login__with_phone"
                android:textColor="@color/button__primary_text"
                android:layout_marginTop="@dimen/space_16"
                app:layout_constraintEnd_toEndOf="@+id/constraintLayout2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/constraintLayout2"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>
